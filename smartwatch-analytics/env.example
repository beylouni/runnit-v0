# ============================================================================
# Smartwatch Analytics - Environment Variables
# ============================================================================

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development
DEBUG=true

# Garmin API Credentials
# Get from: https://developer.garmin.com/
GARMIN_CONSUMER_KEY=your_consumer_key_here
GARMIN_CONSUMER_SECRET=your_consumer_secret_here

# Garmin API URLs
GARMIN_REQUEST_TOKEN_URL=https://connectapi.garmin.com/oauth-service/oauth/request_token
GARMIN_AUTHORIZE_URL=https://connect.garmin.com/oauthConfirm
GARMIN_ACCESS_TOKEN_URL=https://connectapi.garmin.com/oauth-service/oauth/access_token
GARMIN_WELLNESS_API_URL=https://apis.garmin.com/wellness-api/rest

# OAuth Callback
OAUTH_CALLBACK_URL=http://localhost:8000/auth/garmin/callback

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/smartwatch_analytics

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO

